<p id="notice"><%= notice %></p>

<h1>Listing Brands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= image_tag brand.avatar_url(:thumb) unless brand.avatar.file.nil? %></td>
        <td><%= link_to 'Show', brand, class: 'btn btn-xs btn-primary' %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand), class: 'btn btn-xs btn-primary' %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_brand_path, class: 'btn btn-primary' %>
